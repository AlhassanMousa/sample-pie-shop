<section id="cart-items">
  {{#each cart.items}}
  <a href="{{this.url}}">
    <img class="lazy cart" data-id="{{this.id}}" alt="{{this.name}}" srcset=""></img>
    <div>
      <h2>{{this.name}}</h2>
      <p class="quantity">Quantity: <strong>{{this.quantity}}</strong></p>
    </div>
    <p class="total-price"><strong>${{multiply this.price this.quantity}}</strong></p>
  </a>
  {{/each}}
</section>

<section id="cart-summary">
  <p class="total"><span>Total:</span><strong>${{cart.totalPrice}}</strong></p>
  <a id="checkout" href="/payment" title="Go to checkout page"><button>Checkout</button></a>
  <a id="continue-shopping" href="/" title="Go to home page">Continue shopping</a>
</section>
