<main id="product" data-category="{{product.category}}">
  <img class="lazy" data-id="{{product.id}}" alt="{{product.name}}" srcset=""></img>
  <div>
    <h1>{{product.name}}</h1>
    <div id="price">${{product.price}}</div>
    <div id="description">{{product.description}}</div>
    <div id="features">{{{product.features}}}</div>
    <div id="keywords">
       {{#each (trimKeywords product.keywords)}}
       <span class="keyword">{{this}}</span>{{/each}}
    </div>
  </div>
</main>