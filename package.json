{
"name": "pieshop",
"version": "0.0.0",
"private": true,
"dependencies": {
"cookie-parser": "^1.4.3",
"express": "^4.16.3",
"express-handlebars": "^3.0.0",
"express-session": "^1.15.6",
"firebase-admin": "^5.12.1",
"firestore-export-import": "^0.1.3",
"morgan": "^1.9.0"
},
"scripts": {
"build": "npm run clean && npm-run-all --parallel build:static build:node",
"build:node": "./tasks/build-node-scripts.sh",
"build:prod": "NODE_ENV=production npm run build",
"build:static": "./tasks/build-static.sh",
"clean": "rm -rf dist",
"lint": "npm-run-all --parallel lint:eslint lint:stylelint",
"lint:eslint": "eslint 'src/**/*.js'",
"lint:stylelint": "stylelint 'src/**/*.css'",
"serve": "npm run build && npm-run-all --parallel watch server",
"start": "node dist/server/server.js",
"server": "node ./node_modules/.bin/nodemon node dist/server/server.js",
"test": "npm run test:node && npm run test:static",
"test:node": "./tasks/test-node.sh",
"test:static": "./node_modules/.bin/karma start",
"tools:import_products": "./node_modules/.bin/babel-node tools/import_products.js",
"watch": "npm-run-all --parallel watch:static watch:node",
"watch:node": "./node_modules/.bin/watch 'npm run build:node' src/server src/data",
"watch:static": "./node_modules/.bin/watch 'npm run build:static' src/client"
},
"devDependencies": {
"babel-cli": "^6.26.0",
"babel-core": "^6.26.3",
"babel-eslint": "^8.2.5",
"babel-loader": "^7.1.4",
"babel-minify-webpack-plugin": "^0.3.1",
"babel-plugin-dynamic-import-node": "^1.2.0",
"babel-plugin-syntax-dynamic-import": "^6.18.0",
"babel-preset-env": "^1.7.0",
"babel-register": "^6.26.0",
"chai": "^4.1.2",
"csv-parse": "^2.5.0",
"eslint": "^5.0.1",
"eslint-config-google": "^0.9.1",
"mocha": "^5.2.0",
"mockery": "^2.1.0",
"nodemon": "^1.17.5",
"npm-run-all": "^4.1.3",
"stylelint": "^9.3.0",
"stylelint-config-standard": "^18.2.0",
"supertest": "^3.1.0",
"watch": "^1.0.2",
"webpack": "^4.12.1",
"webpack-cli": "^3.0.8",
"webpack-merge": "^4.1.3",
"workbox-webpack-plugin": "^3.3.0"
},
"nodemonConfig": {
"watch": [
"dist/*"
],
"delay": "2500"
}
}
